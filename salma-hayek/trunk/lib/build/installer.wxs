<?xml version='1.0'?>
<!-- formatted with tidy -wrap 0 -xml -indent -m installer.wxs -->
<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'>
  <Product Id='$(env.PRODUCT_GUID)' Name='$(env.HUMAN_PROJECT_NAME) $(env.VERSION_STRING)' Language='1033' UpgradeCode='$(env.UPGRADE_GUID)' Version='$(env.VERSION_STRING)' Manufacturer='software.jessies.org'>
    <Package Id='????????-????-????-????-????????????' Compressed='yes' InstallerVersion='150' />
    <Upgrade Id='$(env.UPGRADE_GUID)'>
      <UpgradeVersion Maximum='$(env.VERSION_STRING)' />
    </Upgrade>
    <Property Id='ALLUSERS' Value='2' />
    <Property Id="ARPCONTACT">software@jessies.org</Property>
    <Property Id='ARPNOMODIFY' Value='1' />
    <Property Id="ARPPRODUCTICON" Value='$(env.MACHINE_PROJECT_NAME).ico' />
    <Property Id="ARPURLINFOABOUT">http://software.jessies.org/$(env.MACHINE_PROJECT_NAME)/</Property>
    <Media Id='1' Cabinet='project.cab' EmbedCab='yes' />

    <Property Id='CYGWIN_HKLM_BIN'>
      <RegistrySearch Id='CYGWIN_HKLM.dir' Root="HKLM" Key='Software\Cygnus Solutions\Cygwin\mounts v2\/' Name='native' Type='directory'>
        <DirectorySearch Id='CYGWIN_HKLM_BIN.dir' Path='bin' Depth='0' />
      </RegistrySearch>
    </Property>

    <Property Id='RUBYW_HKLM'>
      <RegistrySearch Id='RUBYW_HKLM.dir' Root="HKLM" Key='Software\Cygnus Solutions\Cygwin\mounts v2\/' Name='native' Type='directory'>
        <DirectorySearch Id='RUBYW_HKLM_BIN.dir' Path='bin' Depth='0'>
          <FileSearch Id='RUBYW_HKLM.file' Name='rubyw.exe' />
        </DirectorySearch>
      </RegistrySearch>
    </Property>

    <Property Id='CYGWIN_HKCU_BIN'>
      <RegistrySearch Id='CYGWIN_HKCU.dir' Root="HKCU" Key='Software\Cygnus Solutions\Cygwin\mounts v2\/' Name='native' Type='directory'>
        <DirectorySearch Id='CYGWIN_HKCU_BIN.dir' Path='bin' Depth='0' />
      </RegistrySearch>
    </Property>

    <Property Id='RUBYW_HKCU'>
      <RegistrySearch Id='RUBYW_HKCU.dir' Root="HKCU" Key='Software\Cygnus Solutions\Cygwin\mounts v2\/' Name='native' Type='directory'>
        <DirectorySearch Id='RUBYW_HKCU_BIN.dir' Path='bin' Depth='0'>
          <FileSearch Id='RUBYW_HKCU.file' Name='rubyw.exe' />
        </DirectorySearch>
      </RegistrySearch>
    </Property>

    <Condition Message="Cygwin and Cygwin Ruby must be installed">RUBYW_HKLM OR RUBYW_HKCU</Condition>
    <Directory Id='TARGETDIR' Name='SourceDir'>
      <Directory Id='ProgramFilesFolder' Name='Name' LongName='Program Files'>
        <Directory Id='company' Name='Name' LongName='software.jessies.org'>
          <Directory Id='product' Name='Name' LongName='$(env.MACHINE_PROJECT_NAME)'>
            <?include component-definitions.wxi ?>
            <Directory Id='Resources' Name='Name' LongName='Resources'>
              <Directory Id='projectResources' Name='Name' LongName='$(env.MACHINE_PROJECT_NAME)'>
                <Directory Id='bin' Name='Name' LongName='bin'>
                  <Component Id='Path' Guid='$(env.PATH_GUID)'>
                    <CreateFolder />
                    <Environment Id='UpdatePath' Name='PATH' Action='create' System='yes' Part='last' Value='[bin]' />
                  </Component>
                </Directory>
              </Directory>
            </Directory>
          </Directory>
        </Directory>
      </Directory>
      <Directory Id='DesktopFolder' Name='Desktop' />
      <Component Id='RubyShortcut_HKLM' Guid='$(env.SHORTCUT_HKLM_GUID)'>
        <!-- This HKLM-related key is in HKCU deliberately to pass ICE43... but we should be able to "advertise" a shortcut now we install the target -->
        <Registry Id='RegistryKey_HKLM' Root='HKCU' Key='Software\software.jessies.org\$(env.MACHINE_PROJECT_NAME)' Name='ShortcutTarget' Action='write' Type='string' Value='[RUBYW_HKLM]' KeyPath='yes' />
        <!-- CYWGIN_HKLM_BIN ends with a backslash that escapes the quote after it -->
        <Shortcut Id='DesktopShortcutId_HKLM' Directory='DesktopFolder' Name='Name' LongName='$(env.HUMAN_PROJECT_NAME)' Target='[Resources]salma-hayek\.generated\i386_Cygwin\bin\cygwin-launcher' Arguments='"[CYGWIN_HKLM_BIN]\" "[projectResources]bin\$(env.MACHINE_PROJECT_NAME)"' WorkingDirectory='CYGWIN_HKLM_BIN' Icon='$(env.MACHINE_PROJECT_NAME).ico' />
      </Component>
      <Component Id='RubyShortcut_HKCU' Guid='$(env.SHORTCUT_HKCU_GUID)'>
        <Registry Id='RegistryKey_HKCU' Root='HKCU' Key='Software\software.jessies.org\$(env.MACHINE_PROJECT_NAME)' Name='ShortcutTarget' Action='write' Type='string' Value='[RUBYW_HKCU]' KeyPath='yes' />
        <!-- CYWGIN_HKCU_BIN ends with a backslash that escapes the quote after it -->
        <Shortcut Id='DesktopShortcutId_HKCU' Directory='DesktopFolder' Name='Name' LongName='$(env.HUMAN_PROJECT_NAME)' Target='[Resources]salma-hayek\.generated\i386_Cygwin\bin\cygwin-launcher' Arguments='"[CYGWIN_HKCU_BIN]\" "[projectResources]bin\$(env.MACHINE_PROJECT_NAME)"' WorkingDirectory='CYGWIN_HKCU_BIN' Icon='$(env.MACHINE_PROJECT_NAME).ico' />
      </Component>
      <Component Id='OpenHere' Guid='$(env.OPEN_HERE_GUID)'>
        <Registry Id='RegistryKey_OpenHere_Directory' Root='HKCR' Key='Directory\shell\$(env.MACHINE_PROJECT_NAME)' Action='write' Type='string' Value='Open $(env.HUMAN_PROJECT_NAME) Here' />
        <!-- FIXME: the HKLM reference here is wrong for per-user Cygwin installations -->
        <Registry Id='RegistryKey_OpenHere_Directory_command' Root='HKCR' Key='Directory\shell\$(env.MACHINE_PROJECT_NAME)\command' Action='write' Type='string' Value='"[Resources]salma-hayek\.generated\i386_Cygwin\bin\cygwin-launcher.exe" "[CYGWIN_HKLM_BIN]\" "[projectResources]bin\$(env.MACHINE_PROJECT_NAME)" --working-directory "%L"' />
        <Registry Id='RegistryKey_OpenHere_Drive' Root='HKCR' Key='Drive\shell\$(env.MACHINE_PROJECT_NAME)' Action='write' Type='string' Value='Open $(env.HUMAN_PROJECT_NAME) Here' />
        <!-- FIXME: the HKLM reference here is wrong for per-user Cygwin installations -->
        <Registry Id='RegistryKey_OpenHere_Drive_command' Root='HKCR' Key='Drive\shell\$(env.MACHINE_PROJECT_NAME)\command' Action='write' Type='string' Value='"[Resources]salma-hayek\.generated\i386_Cygwin\bin\cygwin-launcher.exe" "[CYGWIN_HKLM_BIN]\" "[projectResources]bin\$(env.MACHINE_PROJECT_NAME)" --working-directory "%L"' />
      </Component>
    </Directory>
    <Feature Id='shortcut_HKLM' Title='$(env.HUMAN_PROJECT_NAME) shortcut' Level='0'>
      <ComponentRef Id='RubyShortcut_HKLM' />
      <Condition Level='1'>CYGWIN_HKLM_BIN AND RUBYW_HKLM</Condition>
    </Feature>
    <Feature Id='shortcut_HKCU' Title='$(env.HUMAN_PROJECT_NAME) shortcut' Level='0'>
      <ComponentRef Id='RubyShortcut_HKCU' />
      <Condition Level='1'>CYGWIN_HKCU_BIN AND RUBYW_HKCU</Condition>
    </Feature>
    <Feature Id='product' Title='$(env.HUMAN_PROJECT_NAME)' Level='1'>
      <ComponentRef Id='Path' /><?include component-references.wxi ?>
    </Feature>
    <Feature Id='OpenHereFeature' Title='Open $(env.HUMAN_PROJECT_NAME) Here' Level='1'>
      <ComponentRef Id='OpenHere' />
    </Feature>
    <InstallExecuteSequence>
      <RemoveExistingProducts After='InstallInitialize' />
    </InstallExecuteSequence>
    <Icon Id='$(env.MACHINE_PROJECT_NAME).ico' src='Resources\$(env.MACHINE_PROJECT_NAME)\lib\$(env.MACHINE_PROJECT_NAME).ico' />
  </Product>
</Wix>
