#!/usr/bin/ruby -w

require 'fileutils.rb'
require 'pathname.rb'

# Cope with symbolic links to this script.
salma_hayek = Pathname.new("#{__FILE__}/..").realpath().dirname()
TARGET_OS=`#{salma_hayek}/bin/target-os.rb`.chomp()

args = [ "java", "-cp", "#{salma_hayek}/classes" ]
if TARGET_OS == "Darwin"
  args << "-Xdock:name=FatBits"
  args << "-Xdock:icon=/Developer/Applications/Graphics Tools/Pixie.app/Contents/Resources/Big.icns"
end
args << "e.tools.FatBits"
args.concat(ARGV)
system(*args)
