#!/usr/bin/ruby -w

require 'fileutils.rb'
require 'pathname.rb'

# Cope with symbolic links to this script.
salma_hayek = Pathname.new("#{__FILE__}/..").realpath().dirname()
TARGET_OS=`#{salma_hayek}/bin/target-os.rb`.chomp()

args = [ "java", "-cp", "#{salma_hayek}/classes" ]
if TARGET_OS == "Darwin"
    args << "-Xdock:name=Xv"
end
args << "e.tools.Xv"
args.concat(ARGV)
system(*args)
