#!/usr/bin/ruby -w

require 'fileutils.rb'
require 'pathname.rb'

# Cope with symbolic links to this script.
salma_hayek = Pathname.new("#{__FILE__}/..").realpath().dirname()
require "#{salma_hayek}/bin/target-os.rb"

args = [ "java", "-cp", "#{salma_hayek}/classes" ]
if target_os() == "Darwin"
    args << "-Xdock:name=Xv"
end
args << "e.tools.Xv"
args.concat(ARGV)
system(*args)
